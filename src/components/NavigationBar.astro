<nav class="shadow-lg">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between">
      <!-- Logo on the Left -->
      <div>
        <a href="#" class="flex items-center py-5 px-2 text-gray-700 hover:text-gray-900">
          <img src="/logo/butterfly.png" class="h-10 w-13 mr-2" alt="Logo">
        </a>
      </div>

      <!-- Hamburger Menu Icon -->
      <div class="md:hidden flex items-center">
        <button id="hamburgerBtn">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
        </button>
      </div>

      <!-- Navigation Links -->
      <div class="hidden flex text-md" id="navLinks">
        <a href="#" class="block py-5 px-3 hover:bg-gray-700 hover:text-white">Home</a>
        <a href="#" class="block py-5 px-3 hover:bg-gray-700 hover:text-white">About</a>
        <a href="#" class="block py-5 px-3 hover:bg-gray-700 hover:text-white">Contact</a>
      </div>
    </div>
  </div>
</nav>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const navLinks = document.getElementById('navLinks');
  
    hamburgerBtn.addEventListener('click', () => {
      navLinks.classList.toggle('hidden'); // Toggle navigation links
      hamburgerBtn.classList.toggle('hidden'); // Hide hamburger button when nav is open
    });
  
    // Optional: If you want to allow closing the nav by clicking on a link
    navLinks.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navLinks.classList.add('hidden'); // Hide navigation links
        hamburgerBtn.classList.remove('hidden'); // Show hamburger button again
      });
    });
  });
  </script>
  
